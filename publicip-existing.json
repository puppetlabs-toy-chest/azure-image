{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "publicIPAddressName": {
            "type": "string"
        },
        "publicIPAddressDomainNameLabel": {
            "type": "string"
        }
    },
    "variables": {
        "publicIpId": "[resourceId('resourceGroup().location'),concat('Microsoft.Network','/','publicIPAddresses'),parameters('publicIPAddressName')]"
    },
    "resources": [],
    "outputs": {
        "publicIpId": {
            "value": "[variables('publicIpId')]",
            "type": "string"
        },
        "fqdn": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',parameters('publicIPAddressName'))).dnsSettings.fqdn]",
            "type": "string"
        }
    }
}
