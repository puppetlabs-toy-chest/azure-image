{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "publicIpAddressResourceId": {
      "type": "string"
    },
    "subnetRef": {
      "type": "string"
    },
    "puppetMasterVmName": {
      "type": "string"
    },
    "vmSize": {
      "type": "string"
    },
    "adminUserName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "consolePassword": {
      "type": "securestring"
    },
    "nicName": {
      "type": "string"
    },
    "sshPublicKey": {
      "type": "securestring"
    },
    "storageAccountName": {
      "type": "string"
    },
    "fqdn": {
      "type": "string"
    },
    "templateBaseUrl": {
      "type": "string"
    },
    "publicIPAddressName": {
      "type": "string"
    }
  },
  "variables": {
    "imageName": "pemasterimage",
    "imagePublisher": "Puppet",
    "imageOffer": "Puppet-Enterprise",
    "imageSku": "2016-1",
    "OSDiskName": "osdisk1",
    "vmStorageAccountContainerName": "vhds",
    "customData": "['#!/bin/bash\ntouch /tmp/customDataDone']",
    "sourceImageBaseURI": "https://cftnortheurope.blob.core.windows.net/system/Microsoft.Compute/",
    "sourceURI": "Images/puppet-enterprise/puppet-enterprise-osDisk.0603a82f-77e2-4cf2-a936-e9edf1d42333.vhd"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/images",
      "apiVersion": "2016-04-30-preview",
      "name": "[variables('imageName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "storageProfile": {
          "osDisk": {
            "osType": "Linux",
            "blobUri": "[concat(variables('sourceImageBaseURI'),variables('sourceURI')]",
            "storageAccountType": "Standard_LRS"
          }
        }
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('nicName')]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[parameters('publicIpAddressResourceId')]"
              },
              "subnet": {
                "id": "[parameters('subnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2016-04-30-preview",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('puppetMasterVmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', parameters('nicName'))]",
        "[concat('Microsoft.Compute/images/', variables('imageName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computername": "[parameters('puppetMasterVmName')]",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "customData": "[base64(variables('customData'))]"
        },
        "storageProfile": {
          "imageReference": {
            "id": "[resourceId('Microsoft.Compute/images', variables('imageName'))]"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "name": "[concat(parameters('puppetMasterVmName'),'/CustomScriptExtension')]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('puppetMasterVmName'))]"
        ],
        "properties": {
           "publisher": "Microsoft.OSTCExtensions",
           "type": "CustomScriptForLinux",
           "typeHandlerVersion": "1.3",
           "autoUpgradeMinorVersion" : "true",
           "settings": {
              "commandToExecute": "touch /tmp/thisisdoneMicroExt"
           }
       }
    }
  ],
  "outputs": {}
}
