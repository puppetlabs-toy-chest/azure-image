{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "publicIpAddressResourceId": {
      "type": "string"
    },
    "subnetRef": {
      "type": "string"
    },
    "puppetMasterVmName": {
      "type": "string"
    },
    "vmSize": {
      "type": "string"
    },
    "adminUserName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "consolePassword": {
      "type": "securestring"
    },
    "nicName": {
      "type": "string"
    },
    "sshPublicKey": {
      "type": "securestring"
    },
    "storageAccountName": {
      "type": "string"
    },
    "fqdn": {
      "type": "string"
    },
    "templateBaseUrl": {
      "type": "string"
    },
    "publicIPAddressName": {
      "type": "string"
    }
  },
  "variables": {
    "imagePublisher": "Puppet",
    "imageOffer": "Puppet-Enterprise",
    "imageSku": "2016-1",
    "OSDiskName": "osdisk1",
    "vmStorageAccountContainerName": "vhds",
    "customData": "['#!/bin/bash\ntouch /tmp/customDataDone']",
    "sourceImageURIcut": "puppet-enterprise/puppet-enterprise-osDisk.bfef9542-270f-4750-9559-82098761f6f2.vhd",
    "sourceImageURI": "https://cftnortheurope.blob.core.windows.net/system/Microsoft.Compute/Images/puppet-enterprise/puppet-enterprise-osDisk.bfef9542-270f-4750-9559-82098761f6f2.vhd"
  },
  "resources": [
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('nicName')]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[parameters('publicIpAddressResourceId')]"
              },
              "subnet": {
                "id": "[parameters('subnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('puppetMasterVmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', parameters('nicName'))]"
      ],
      "plan": {
        "name": "2016-1",
        "product": "puppet-enterprise",
        "publisher": "puppet"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computername": "[parameters('puppetMasterVmName')]",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "customData": "[base64(variables('customData'))]"
        },
        "storageProfile": {
          "osDisk": {
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "name": "osdisk",
            "osType": "linux",
            "image": {
              "uri": "[variables('sourceImageURI')]"
            },
            "vhd": {
              "uri": "[variables('sourceImageURIcut')]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "name": "[concat(parameters('puppetMasterVmName'),'/CustomScriptExtension')]",
        "apiVersion": "2016-03-30",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', parameters('puppetMasterVmName'))]"
        ],
        "properties": {
           "publisher": "Microsoft.OSTCExtensions",
           "type": "CustomScriptForLinux",
           "typeHandlerVersion": "1.3",
           "autoUpgradeMinorVersion" : "true",
           "settings": {
              "fileUris": [
                "[concat(parameters('templateBaseUrl'),'/wait.sh')]"
              ],
              "commandToExecute": "./wait.sh"
           }
       }
    }
  ],
  "outputs": {}
}
